<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".OrganisasiFragment" android:background="@color/Bacground_2">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="?android:attr/windowTitleSize"
            android:background="@color/Bacground_2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical" android:gravity="center">
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:cardBackgroundColor="@color/Background"
                    android:layout_margin="5dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                            android:src="@drawable/seminar_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/imageView4"
                            android:scaleType="fitCenter" android:adjustViewBounds="true"/>
                    <TextView
                            android:text="Seminar Mobile App"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView6" android:textStyle="bold"
                            android:textSize="22sp" android:textColor="@color/cardview_dark_background"/>
                    <TextView
                            android:text="Seminar yang akan diselelngarakan..."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView7" android:textSize="16sp"/>
                    <TextView
                            android:text="campus.com/organisation/item_12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView8" android:textSize="16sp"
                            android:textColor="@color/Link_text"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>